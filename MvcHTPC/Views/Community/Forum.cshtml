@model MvcHTPC.ViewModels.ForumViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

[Create New Folder]

<div style="border: 1px solid #000; margin: 5px; padding: 5px; border-radius: 5px;">
    <table class="table table-condensed table-hover">
        
            @if (Model.folderDtos.Count() > 0)
            {
                <thead>
                    <tr>
                        <th class="col-sm-1" style="min-width: 32px;"></th>
                        <th class="col-md-4" style="width: 100%;"></th>
                        <th class="col-sm-1" style="min-width: 150px;"></th>
                    </tr>
                </thead>
                <tbody style="border-bottom: 1px solid #000;">
                    @foreach (var i in Model.folderDtos)
                {

                        <tr>
                            <th style="border-left: 1px solid #000; border-right: 1px solid #000;">
                                <img src="@i.iconText" />
                            </th>
                            <td style="border-left: 1px solid #000; border-right: 1px solid #000;">
                                <p>
                                    <strong><a href='@Url.Action("Folder", "Folders", new { id = i.id })'>@i.title</a></strong>
                                </p>
                                <p>
                                    <span>@i.description</span>
                                </p>
                            </td>
                            <td style="border-left: 1px solid #000; border-right: 1px solid #000;">
                                <p>
                                    <span>Last activity @i.lastModified by @Model.lastModifiedUsername</span>
                                </p>
                            </td>

                        </tr>
                    }
                </tbody>
            }
            else
            {
                <tr><td><span>There are no folders here</span></td></tr>
            }
    </table>
</div>